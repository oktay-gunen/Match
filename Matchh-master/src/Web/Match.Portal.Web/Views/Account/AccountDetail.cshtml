@model AccountDetailViewModel
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Hesap Ayarları /</span> Hesap Bilgileri</h4>
<div class="row">
    <div class="col-md-12">
        <form id="formAccountSettings" method="POST">
            <div class="card mb-4">
                <h5 class="card-header">Profil Detayı</h5>
                <!-- Account -->
                <hr class="my-0" />
                <div class="card-body">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="name" class="form-label">Ad</label>
                            <input class="form-control" type="text" id="name" name="name" value="@Model.Name" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="surname" class="form-label">Soyad</label>
                            <input class="form-control" type="text" name="surname" id="surname" value="@Model.Surname" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">E-mail</label>
                            <input class="form-control" type="text" id="email" name="email" value="@Model.Email"
                                   placeholder="mail@example.com" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label" for="phone">Cep Telefonu</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"></span>
                                <input type="text" id="phone" name="phone" class="form-control" value="@Model.Phone"
                                       placeholder="555 555 0111" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6 form-password-toggle">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <div class="input-group input-group-merge">
                                <input type="password" class="form-control" asp-for="Password" placeholder="············"
                                       aria-describedby="password">
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>

                        </div>
                        <div class="mb-3 col-md-6 form-password-toggle">
                            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="············"
                                       aria-describedby="confirm-password">
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="OperationClaimId" class="form-label">Yetki</label>
                            <select class="form-select" asp-for="OperationClaimId" aria-label="OperationClaimId" disabled>
                                <option selected value="@Model.OperationClaimId">@Model.OperationClaimName</option>
                            </select>
                            <input type="hidden" asp-for="OperationClaimName" />
                        </div>

                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                    </div>

                </div>
                <!-- /Account -->
            </div>
            <div class="card">
                <h5 class="card-header">Hesabı Sil</h5>
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading fw-bold mb-1">Hesabınızı silmek istediğinizden emin misiniz?"</h6>
                            <p class="mb-0">Hesabınızı silmenin kalıcı olduğunu ve hesabınıza erişim sağlayamayacağınızı unutmayın.</p>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsDeleted" />
                        <label class="form-check-label" asp-for="IsDeleted">
                            Hesabımın devre dışı bırakılmasını
                            onaylıyorum
                        </label>
                    </div>
                    <button type="submit" class="btn btn-danger deactivate-account">Hesabı Sil</button>

                </div>
            </div>
        </form>
    </div>
</div>